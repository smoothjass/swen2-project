<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ScrollPane?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="fhtw.swen2.duelli.duvivie.swen2project.Controller.MainViewController"
      fx:id="mainView">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <ScrollPane fitToHeight="true" fitToWidth="true">
    <SplitPane orientation="HORIZONTAL" VBox.vgrow="ALWAYS">
        <items>
            <fx:include fx:id="tourListSubview" minWidth="200" maxWidth="500" source="tour-list-subview.fxml"> </fx:include>
            <SplitPane orientation="VERTICAL">
                <fx:include fx:id="tourDetailsSubview" source="tour-details-subview.fxml"></fx:include>
            </SplitPane>
        </items>
    </SplitPane>
    </ScrollPane>

</VBox>
