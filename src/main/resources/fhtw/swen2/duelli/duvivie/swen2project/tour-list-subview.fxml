<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="fhtw.swen2.duelli.duvivie.swen2project.Controller.TourListSubviewController">

    <stylesheets>
        <URL value="@stylesheets/searchbar.css" />
    </stylesheets>

    <HBox styleClass="search-bar">
        <Label graphicTextGap="5" styleClass="search-icon">
            <graphic>
                <ImageView>
                    <Image url="@icons/search.png" />
                </ImageView>
            </graphic>
        </Label>
        <TextField styleClass="search-field" promptText="Search..." />
    </HBox>

    <VBox fx:id="tourListButtons">
        <Button fx:id="SummaryReportButton" prefWidth="${SummaryReportButton.parent.width}" text="Generate summary report"/>
        <HBox>
            <Button fx:id="addTour" prefWidth="${addTour.parent.width}" text="Add tour data"/>
            <Button fx:id="importTour" prefWidth="${importTour.parent.width}"  text="import tour data"/>
        </HBox>
    </VBox>

</VBox>
