<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="fhtw.swen2.duelli.duvivie.swen2project.Controller.PictureGalleryController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <HBox alignment="BASELINE_RIGHT">
            <Label style="-fx-font-size: 18; -fx-padding: 0 0 10 0;" text="Tour Images"/>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="selectNewImage" onAction="#addNewPicture">
                <graphic>
                    <ImageView>
                        <Image url="@icons/add-image.png" />
                    </ImageView>
                </graphic>
            </Button>
    </HBox>
    <VBox alignment="CENTER" spacing="20">
        <ImageView fx:id="imageView"/>
        <HBox alignment="CENTER" spacing="10">
            <Button text="Previous" onAction="#goToPreviousImage" />
            <Button text="Next" onAction="#goToNextImage" />
        </HBox>
    </VBox>
</VBox>
